<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>{{articleBody}}</p>
  <p>Created by {{user.name}} on {{format_date createdAt}}</p>
  
</div>

<div>
{{#if logged_in}}
    <form class="form new-comment-form">
      <div class="form-group">
            <label for="project-desc">Comment:</label>
            <textarea class="form-input" id="comment" name="comment"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Comment</button>
          </div>
          <div>
          {{else}}
          <p>Please login!</p>
          {{/if}}
          </div>
    </form>


  <h3>Comments</h3>
    {{#each comments as |comment| }}
  <div class="row mb-4 project">
    <p>{{comment.comment_body}}</p>
    <br>
    <p>Commented By: {{comment.user.name}}</p>
    <br>
  </div>
  {{/each}}
  </div>


<script src="/js/comment.js"></script>
